local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Workspace = game:GetService("Workspace")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "mangahubgui"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(0, 220, 0, 40)
titleLabel.Position = UDim2.new(0.5, -110, 0.3, 0)
titleLabel.AnchorPoint = Vector2.new(0.5, 0)
titleLabel.BackgroundColor3 = Color3.new(0, 0, 0)
titleLabel.BackgroundTransparency = 0.5
titleLabel.Text = "manga hub"
titleLabel.Font = Enum.Font.SourceSansBold
titleLabel.TextSize = 30
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.TextXAlignment = Enum.TextXAlignment.Center
titleLabel.TextYAlignment = Enum.TextYAlignment.Center
titleLabel.Visible = false
titleLabel.Parent = screenGui

local toggleButton = Instance.new("TextButton")
toggleButton.Name = "ToggleButton"
toggleButton.Size = UDim2.new(0, 30, 0, 30)
toggleButton.Position = UDim2.new(1, -35, 0, 5)
toggleButton.AnchorPoint = Vector2.new(0, 0)
toggleButton.BackgroundColor3 = Color3.new(0, 0, 0)
toggleButton.BackgroundTransparency = 0.2
toggleButton.Text = "+"
toggleButton.BorderSizePixel = 0
toggleButton.TextColor3 = Color3.new(1,1,1)
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 20
toggleButton.Parent = screenGui

local panel = Instance.new("Frame")
panel.Size = UDim2.new(0, 220, 0, 190)
panel.Position = UDim2.new(0.5, -110, 0.3, 40)
panel.AnchorPoint = Vector2.new(0.5, 0)
panel.BackgroundColor3 = Color3.fromRGB(255,0,0)
panel.BorderSizePixel = 0
panel.Visible = false
panel.Parent = screenGui

local hue = 0
RunService.Heartbeat:Connect(function()
	if panel.Visible then
		hue = (hue + 0.5) % 360
		panel.BackgroundColor3 = Color3.fromHSV(hue / 360, 1, 1)
	end
end)

local function createToggle(name, position, parent)
	local button = Instance.new("TextButton")
	button.Name = name .. "Toggle"
	button.Size = UDim2.new(0, 200, 0, 30)
	button.Position = position
	button.BackgroundColor3 = Color3.fromRGB(255,255,255)
	button.BorderSizePixel = 0
	button.Text = name
	button.Font = Enum.Font.SourceSansBold
	button.TextSize = 20
	button.TextColor3 = Color3.new(0,0,0)
	button.BackgroundTransparency = 0.5
	button.Parent = parent
	return button
end

local aimbotToggle = createToggle("aimbot",      UDim2.new(0, 10, 0, 10),  panel)
local espToggle    = createToggle("esp",         UDim2.new(0, 10, 0, 50),  panel)
local fovToggle    = createToggle("circulo fov", UDim2.new(0, 10, 0, 90),  panel)

local whitelistLabel = Instance.new("TextLabel")
whitelistLabel.Size = UDim2.new(0, 200, 0, 20)
whitelistLabel.Position = UDim2.new(0, 10, 0, 130)
whitelistLabel.BackgroundTransparency = 1
whitelistLabel.Font = Enum.Font.SourceSans
whitelistLabel.TextSize = 16
whitelistLabel.TextColor3 = Color3.new(1,1,1)
whitelistLabel.Text = "Whitelist (nomes, vírgula):"
whitelistLabel.TextXAlignment = Enum.TextXAlignment.Left
whitelistLabel.Parent = panel

local whitelistBox = Instance.new("TextBox")
whitelistBox.Name = "WhitelistBox"
whitelistBox.Size = UDim2.new(0, 200, 0, 25)
whitelistBox.Position = UDim2.new(0, 10, 0, 155)
whitelistBox.BackgroundColor3 = Color3.new(0,0,0)
whitelistBox.BackgroundTransparency = 0.2
whitelistBox.Text = ""
whitelistBox.PlaceholderText = "Ex: Pedro, Davi"
whitelistBox.Font = Enum.Font.SourceSans
whitelistBox.TextSize = 18
whitelistBox.TextColor3 = Color3.new(1,1,1)
whitelistBox.ClearTextOnFocus = false
whitelistBox.Parent = panel

local function highlightToggle(toggle, color)
	toggle.BackgroundTransparency = 0
	toggle.BackgroundColor3 = color
	toggle.TextColor3 = Color3.new(1,1,1)
end

local function resetToggle(toggle)
	toggle.BackgroundTransparency = 0.5
	toggle.BackgroundColor3 = Color3.fromRGB(255,255,255)
	toggle.TextColor3 = Color3.new(0,0,0)
end

local aimbotEnabled = false
local espEnabled    = false
local fovEnabled    = false

toggleButton.MouseButton1Click:Connect(function()
	panel.Visible = not panel.Visible
	titleLabel.Visible = panel.Visible
	toggleButton.Text = panel.Visible and "-" or "+"
end)

UserInputService.InputBegan:Connect(function(input, gameProcessed)
	if gameProcessed then return end
	
	if input.KeyCode == Enum.KeyCode.X then
		panel.Visible = not panel.Visible
		titleLabel.Visible = panel.Visible
		toggleButton.Text = panel.Visible and "-" or "+"
	elseif input.KeyCode == Enum.KeyCode.R then
		aimbotToggle.MouseButton1Click:Fire()
	elseif input.KeyCode == Enum.KeyCode.E then
		espToggle.MouseButton1Click:Fire()
	elseif input.KeyCode == Enum.KeyCode.F then
		fovToggle.MouseButton1Click:Fire()
	end
end)

local dragging = false
local dragInput, dragStart, startPos

local function updatePosition(input)
	local delta = input.Position - dragStart
	local newX = startPos.X.Offset + delta.X
	local newY = startPos.Y.Offset + delta.Y
	
	titleLabel.Position = UDim2.new(startPos.X.Scale, newX, startPos.Y.Scale, newY)
	panel.Position = UDim2.new(startPos.X.Scale, newX, startPos.Y.Scale, newY + 40)
end

titleLabel.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = titleLabel.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

titleLabel.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)

panel.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = titleLabel.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

panel.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		updatePosition(input)
	end
end)

local whitelist = {}

local function updateWhitelist()
	table.clear(whitelist)
	local text = whitelistBox.Text or ""
	for name in string.gmatch(text, "([^,]+)") do
		local trimmed = name:gsub("^%s+", ""):gsub("%s+$", "")
		if trimmed ~= "" then
			whitelist[trimmed:lower()] = true
		end
	end
end

whitelistBox.FocusLost:Connect(function()
	updateWhitelist()
end)

local function isWhitelisted(plr)
	if not plr then return false end
	return whitelist[plr.Name:lower()] == true
end

local fovCircle = Drawing.new("Circle")
fovCircle.Visible = false
fovCircle.Thickness = 2
fovCircle.Color = Color3.fromRGB(255, 255, 255)
fovCircle.Transparency = 1
fovCircle.NumSides = 64
fovCircle.Filled = false
fovCircle.Radius = 150

RunService.RenderStepped:Connect(function()
	if fovCircle.Visible then
		local camera = Workspace.CurrentCamera
		if camera then
			local viewportSize = camera.ViewportSize
			fovCircle.Position = Vector2.new(viewportSize.X / 2, viewportSize.Y / 2)
		end
	end
end)

fovToggle.MouseButton1Click:Connect(function()
	fovEnabled = not fovEnabled
	fovCircle.Visible = fovEnabled
	if fovEnabled then
		highlightToggle(fovToggle, Color3.fromRGB(255, 255, 255))
	else
		resetToggle(fovToggle)
	end
end)

local function isVisible(targetHead)
	local camera = Workspace.CurrentCamera
	if not camera then return false end

	local origin = camera.CFrame.Position
	local direction = (targetHead.Position - origin)
	local distance = direction.Magnitude
	if distance <= 0 then return false end

	local raycastParams = RaycastParams.new()
	raycastParams.FilterType = Enum.RaycastFilterType.Blacklist
	raycastParams.FilterDescendantsInstances = {player.Character or nil}

	local result = Workspace:Raycast(origin, direction, raycastParams)
	if result and result.Instance and result.Instance:IsDescendantOf(targetHead.Parent) then
		return true
	end

	return false
end

local function getClosestVisiblePlayer()
	local closest
	local closestDist = math.huge
	local camera = Workspace.CurrentCamera
	if not camera then return nil end
	local origin = camera.CFrame.Position

	for _, plr in pairs(Players:GetPlayers()) do
		if plr ~= player and not isWhitelisted(plr) and plr.Character and plr.Character:FindFirstChild("Head") then
			local head = plr.Character.Head
			if isVisible(head) then
				local dist = (head.Position - origin).Magnitude
				if dist < closestDist then
					closestDist = dist
					closest = plr
				end
			end
		end
	end

	return closest
end

local aimbotConn
local currentTarget = nil

aimbotToggle.MouseButton1Click:Connect(function()
	aimbotEnabled = not aimbotEnabled
	if aimbotEnabled then
		highlightToggle(aimbotToggle, Color3.fromRGB(0, 255, 0))
		local camera = Workspace.CurrentCamera
		
		aimbotConn = RunService.RenderStepped:Connect(function(deltaTime)
			if not aimbotEnabled then return end
			if not camera then camera = Workspace.CurrentCamera end

			local target = getClosestVisiblePlayer()
			currentTarget = target
			
			if target and target.Character and target.Character:FindFirstChild("Head") then
				local targetHead = target.Character.Head
				local targetPos = targetHead.Position
				
				local humanoid = target.Character:FindFirstChild("Humanoid")
				if humanoid and humanoid.MoveDirection.Magnitude > 0 then
					local velocity = humanoid.MoveDirection * humanoid.WalkSpeed
					local distance = (targetPos - camera.CFrame.Position).Magnitude
					local timeToHit = distance / 400
					targetPos = targetPos + (velocity * timeToHit * 0.5)
				end
				
				local currentCF = camera.CFrame
				local targetCF = CFrame.lookAt(currentCF.Position, targetPos)
				
				local smoothFactor = 1 - math.pow(0.01, deltaTime * 10)
				
				local lerpedCF = currentCF:Lerp(targetCF, smoothFactor)
				
				camera.CFrame = lerpedCF
			end
		end)
	else
		resetToggle(aimbotToggle)
		currentTarget = nil
		if aimbotConn then
			aimbotConn:Disconnect()
			aimbotConn = nil
		end
	end
end)

local function clearEspForCharacter(char)
	if not char then return end
	local highlight = char:FindFirstChild("EspHighlight")
	if highlight then
		highlight:Destroy()
	end
end

local function createEspForCharacter(plr, char)
	if not char then return end
	
	clearEspForCharacter(char)
	
	local highlight = Instance.new("Highlight")
	highlight.Name = "EspHighlight"
	highlight.Adornee = char
	highlight.FillColor = Color3.fromRGB(0, 150, 255)
	highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
	highlight.FillTransparency = 0.7
	highlight.OutlineTransparency = 0
	highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
	highlight.Parent = char
end

local function enableEsp()
	for _, plr in pairs(Players:GetPlayers()) do
		if plr ~= player and plr.Character then
			createEspForCharacter(plr, plr.Character)
		end
	end
end

local function disableEsp()
	for _, plr in pairs(Players:GetPlayers()) do
		if plr ~= player and plr.Character then
			clearEspForCharacter(plr.Character)
		end
	end
end

local espConnPlayers

espToggle.MouseButton1Click:Connect(function()
	espEnabled = not espEnabled

	if espEnabled then
		highlightToggle(espToggle, Color3.fromRGB(0, 150, 255))
		enableEsp()

		if not espConnPlayers then
			espConnPlayers = Players.PlayerAdded:Connect(function(plr)
				if plr == player then return end
				plr.CharacterAdded:Connect(function(char)
					char:WaitForChild("Head", 10)
					if espEnabled then
						createEspForCharacter(plr, char)
					end
					local humanoid = char:FindFirstChild("Humanoid")
					if humanoid then
						humanoid.Died:Connect(function()
							clearEspForCharacter(char)
						end)
					end
				end)
			end)
		end

		for _, plr in pairs(Players:GetPlayers()) do
			if plr ~= player then
				plr.CharacterAdded:Connect(function(char)
					char:WaitForChild("Head", 10)
					if espEnabled then
						createEspForCharacter(plr, char)
					end
					local humanoid = char:FindFirstChild("Humanoid")
					if humanoid then
						humanoid.Died:Connect(function()
							clearEspForCharacter(char)
						end)
					end
				end)
			end
		end
	else
		resetToggle(espToggle)
		disableEsp()
		if espConnPlayers then
			espConnPlayers:Disconnect()
			espConnPlayers = nil
		end
	end
end)

